package components

templ Dialog(contents templ.Component) {
    <dialog class="modal" 
        hx-on:htmx:load="this.showModal();"
        hx-on:close-modal="this.close()">
        <div class="modal-box pt-2">
            <button class="btn btn-circle btn-ghost absolute right-2 top-2 z-1"
                hx-on:click="htmx.trigger('dialog', 'close-modal')">
                <i data-lucide="x"></i>
            </button>

            @contents
        </div>
    </dialog>
}
